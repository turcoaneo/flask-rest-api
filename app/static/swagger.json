{
  "openapi": "3.0.0",
  "info": {
    "title": "Recipes Rest API marshmallow",
    "description": "Swagger UI for Recipes API",
    "version": "1.0.0"
  },
  "paths": {
    "/hello": {
      "get": {
        "summary": "Get a hello world message",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/recipe": {
      "get": {
        "summary": "Get a list of recipes",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Recipe"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Save a recipe",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/RecipeUpdate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Recipe"
                }
              }
            }
          },
          "422": {
            "description": "Invalid request data, check the request body!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/recipe/{id}": {
      "delete": {
        "summary": "Delete a specific recipe",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful delete operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get a specific recipe",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful get operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Recipe"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update / patch a recipe",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/RecipeUpdate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Updated or patched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Recipe"
                }
              }
            }
          },
          "422": {
            "description": "Invalid request data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Recipe": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "allOf": {
          "$ref": "#/definitions/RecipeUpdate"
        }
      }
    },
    "RecipeUpdate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "ingredients": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "instructions": {
          "type": "string"
        }
      }
    }
  }
}